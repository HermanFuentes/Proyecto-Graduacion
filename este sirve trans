#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>
#include <Wire.h> 
#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27,20,4); 
//Declaremos los pines CE y el CSN
#define CE_PIN 8
#define CSN_PIN 9
 
//Variable con la direcci√≥n del canal por donde se va a transmitir
byte direccion[5] ={'c','a','n','a','l'};

//creamos el objeto radio (NRF24L01)
RF24 radio(CE_PIN, CSN_PIN);

//vector con los datos a enviar
float datos[7];

void setup()
{ lcd.init();                      // initialize the lcd 
  lcd.init(); 
  lcd.backlight();
  //inicializamos el NRF24L01 
  radio.begin();
  //inicializamos el puerto serie
  Serial.begin(9600); 
 
//Abrimos un canal de escritura
 radio.openWritingPipe(direccion);
   radio.openReadingPipe(1, direccion);
  radio.setPALevel(RF24_PA_LOW);
  
}
 
void loop()
{      radio.stopListening();
delay(5);

 //cargamos los datos en la variable datos[]
 datos[0]=analogRead(0);
 datos[1]=analogRead(1);
 datos[2]=analogRead(2);
 datos[3]=0;
 datos[4]=0;
 datos[5]=0;
 datos[6]=0;
 //enviamos los datos
 bool ok = radio.write(datos, sizeof(datos));
  //reportamos por el puerto serial los datos enviados 
  if(ok)
  {
     Serial.print("----------"); 
    /* Serial.print(datos[0]); 
     Serial.print(" , "); 
     Serial.print(datos[1]); 
     Serial.print(" , "); 
     Serial.println(datos[2]); 
     */
       
  }
  else
  {
     Serial.println("no se ha podido enviar");
 
  }

  //test

   radio.startListening();
   uint8_t numero_canal;
 //if ( radio.available(&numero_canal) )
 if ( radio.available() )
 {    
     //Leemos los datos y los guardamos en la variable datos[]
     radio.read(datos,sizeof(datos));
     
     //reportamos por el puerto serial los datos recibidos
  Serial.print("Dato4= " );
  Serial.print(datos[4]);

  lcd.setCursor(0,0);
  lcd.print("HM:");
  lcd.setCursor(3,0);
//int   hm= datos[3];
  lcd.print(datos[3]);
  Serial.print(" V, ");
  Serial.print("Dato5= " ); 
  lcd.setCursor(0,1);
  lcd.print("BT:");
  lcd.setCursor(3,1);
  int bt=datos[4];
  lcd.print(bt);
  Serial.print(datos[5]);
  Serial.print(" ms, ");
  Serial.print("Dato6= " );
  Serial.println(datos[5]);
  lcd.setCursor(10,0);
  lcd.print("CO:");
  lcd.setCursor(13,0);
  int co= datos[5];
  lcd.print(co);
  lcd.setCursor(10,1);
  lcd.print("t:");
  lcd.setCursor(13,1);
  int t= datos[6];
  lcd.print(t); delay(15);

 }
 else
 {
     Serial.println("------------");
 }

}
